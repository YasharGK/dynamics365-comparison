{
  "name": "dynamics365-comparison",
  "author": "Yashar Ghouchibeik",
  "version": "1.1.4",
  "description": "Script to visually compare Dynamics 365 artefacts, like plug-ins and endpoints, between a source and destination environment",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "dynamics 365 comparison",
    "dynamics365 comparison",
    "dynamics365",
    "crm",
    "ce",
    "sales",
    "customer engagement",
    "plugins",
    "comparison",
    "dynamics assemblies",
    "dynamics plugins",
    "dynamics steps",
    "dynamics images"
  ],
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "bin": {
    "dynamics365-comparison": "./lib/index.js"
  },
  "types": "lib/index",
  "scripts": {
    "start": "npm run build && node lib/index.js \"\" \"index.html\"",
    "report": "node report-generator.js",
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "lintFix": "tslint --fix \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prebuild2": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "prebuild": "npm run clean && copyfiles -f src/template/* lib/template && copyfiles -f node_modules/diff/dist/diff.min.js lib/out",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "adal-node": "^0.2.1",
    "colors": "^1.4.0",
    "create-html": "^4.1.0",
    "diff": "^4.0.1",
    "dotenv": "^8.1.0",
    "dynamics-web-api": "^1.5.10",
    "open": "^6.4.0",
    "typescript-collections": "^1.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "copyfiles": "^2.1.1",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
