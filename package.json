{
  "name": "dynamics365-comparison",
  "author": "Yashar Ghouchibeik",
  "version": "0.0.14",
  "description": "A visual comparison tool for Dynamics 365 plug-in artefacts. Differences between a source and destination environment are shown in a HTML output file.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YasharGK/dynamics365-comparison.git"
  },
  "keywords": [
    "dynamics365",
    "dynamics 365 comparison",
    "dynamics365 comparison",
    "crm",
    "common data service",
    "cds",
    "ce",
    "sales",
    "customer engagement",
    "plugins",
    "comparison",
    "dynamics assemblies",
    "dynamics plugins",
    "dynamics steps",
    "dynamics images"
  ],
  "files": [
    "lib"
  ],
  "main": "./lib/cli.js",
  "bin": "./lib/cli.js",
  "types": "lib/cli",
  "scripts": {
    "start": "npm run build && node lib/cli.js -k \"Microsoft\" -o \"index.html\" source_authorityUrl source_resource source_clientId source_clientSecret source_webAPIUrl destination_authorityUrl destination_resource destination_clientId destination_clientSecret destination_webAPIUrl",
    "report": "node report-generator.js",
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "lintFix": "tslint --fix \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && copyfiles -f src/template/* lib/template",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "adal-node": "^0.2.1",
    "cli-spinner": "^0.2.10",
    "dynamics-web-api": "^1.5.10",
    "open": "^6.4.0",
    "optimist": "^0.6.1",
    "typescript-collections": "^1.3.2"
  },
  "devDependencies": {
    "@types/optimist": "0.0.29",
    "@types/cli-spinner": "^0.2.0",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "copyfiles": "^2.1.1",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
